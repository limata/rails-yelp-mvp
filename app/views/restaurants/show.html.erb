<p><%= link_to "Home", restaurants_path do %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Phone Number:</strong>
  <%= @restaurant.phone_number %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>

<p><%= link_to edit_restaurant_path(@restaurant) do %><i class="fa fa-eye" aria-hidden="true"></i><% end %></p>

<p><%= link_to restaurant_path(@restaurant), method: :delete, data: {confirm: 'Are you sure?' } do %></p><i class="fa fa-trash" aria-hidden="true"></i><% end %>

<div class="container">
  <h3>Reviews:</h3>
  <ul>
  <% @restaurant.reviews.each do |review| %>
    <li class="review-card col-md-6 col-md-offset-3">
      <%= review.content %>
       - Rating: <%= review.rating %>
    </li>
  <% end %>
  </ul>
</div>

<div class="container">
  <p><%= link_to "Create a new Review", new_restaurant_review_path(@restaurant) %></p>
</div>
